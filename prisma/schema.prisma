// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  username   String
  email      String   @unique
  password   String
  creds      Int      @default(0)        // âœ… to store credits
  unlimited  Boolean  @default(false)
  name       String?
  resumes    Resume[]
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  createdAt DateTime @default(now())
  expiresAt DateTime
}


